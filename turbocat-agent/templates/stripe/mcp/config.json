{
  "name": "stripe",
  "version": "1.0.0",
  "description": "Stripe payment processing integration",
  "mcpServers": {
    "stripe": {
      "command": "npx",
      "args": ["-y", "@stripe/mcp-server"],
      "env": {
        "STRIPE_API_KEY": "${STRIPE_SECRET_KEY}"
      }
    }
  },
  "capabilities": [
    "payments",
    "subscriptions",
    "customers",
    "invoices",
    "products",
    "prices"
  ],
  "required": false,
  "documentation": "https://stripe.com/docs/api"
}
